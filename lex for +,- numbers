%{
#include <stdio.h>
int posCount = 0, negCount = 0;
%}

%%

\n      { printf("Positive numbers: %d, Negative numbers: %d\n", posCount, negCount); posCount = 0; negCount = 0; }
-?[0-9]+ { if (atoi(yytext) < 0) ++negCount; else ++posCount; }

%%

int yywrap(void) {
    return 1;
}

int main(void) {
    yylex();
    return 0;
}
